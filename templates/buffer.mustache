<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Frameset//EN" "http://www.w3.org/TR/html4/frameset.dtd">
<html>
  <body>
    <form action="/{{room}}/buffer" method="post">
      {{#user}}
        <label for="message">{{user}}</label>
        <input type="text" size="50" name="message" />
        <input type="submit" value="Chat" />
      {{/user}}
      {{^user}}
        <label for="user">Enter your name to join the room:</label>
        <input type="text" maxlength="15" size="15" name="user" />
        <input type="submit" value="Join" />
      {{/user}}
    </form>
  </body>
</html> 
